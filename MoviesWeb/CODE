function createStarRating(rating) {
    return Array(5).fill(null)
        .map((_, i) => `<svg class="star ${i < rating ? 'filled' : ''}" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>`)
        .join('');
}

function createMovieCard(movie) {

    return `
        <div class="movie-card">
            <div class="movie-poster-container">
                <img src="${movie.poster}" alt="${movie.title}" class="movie-poster">
                ${movie.isNew ? '<span class="movie-badge">Top Movie</span>' : ''}

            </div>
            <div class="movie-info">
                <h3 class="movie-title">${movie.title}</h3>
                <div class="movie-genres">
                    ${movie.genres.map(genre => `<span class="genre-badge">${genre}</span>`).join('')}
                </div>
                <div class="movie-footer">
                    <div class="star-rating">
                        ${createStarRating(movie.rating)}
                    </div>
                    <button class="btn btn-outline" data-movie-id="${movie.id}">Ver más</button>
                </div>
            </div>
        </div>
    `;
}


function renderMovies(proxiFilter = false) {
    const moviesGrid = document.getElementById('moviesGrid');
    
  
    const filteredMovies = movies.filter(movie => movie.proxi === proxiFilter);

    if (moviesGrid) {
        moviesGrid.innerHTML = filteredMovies.map(createMovieCard).join('');
    } else {
        console.error('Movies grid element not found');
    }
}

function renderMoviesproxiammente (proxiFilter = true) {
    const moviesGrid = document.getElementById('moviesGrid');
    
    
    const filteredMovies = movies.filter(movie => movie.proxi === proxiFilter);

    if (moviesGrid) {
        moviesGrid.innerHTML = filteredMovies.map(createMovieCard).join('');
    } else {
        console.error('Movies grid element not found');
    }
}




function addEventListeners() {
    const filterButtons = document.querySelectorAll('.filter-buttons .btn');
    filterButtons.forEach(button => {
        button.addEventListener('click', () => {
         
            filterButtons.forEach(btn => btn.classList.remove('active'));

            button.classList.add('active');

            
            if (button.classList.contains('btn-primary')) {
                renderMovies(false); 
                renderMoviesproxiammente(true); 
            }
        });
    });


    const moviesGrid = document.getElementById('moviesGrid');
    if (moviesGrid) {
        moviesGrid.addEventListener('click', function(event) {
            if (event.target && event.target.classList.contains('btn-outline')) {
                const movieId = parseInt(event.target.getAttribute('data-movie-id'));
                showMovieDetails(movieId);
            }
        });
    }

    // Manejar el clic en el botón de cerrar del modal
    const closeModalButton = document.getElementById('closeModal');
    if (closeModalButton) {
        closeModalButton.addEventListener('click', closeModal);
    }
}

function filterMoviesByTitle(searchText) {
    const moviesGrid = document.getElementById('moviesGrid');
    const filteredMovies = movies.filter(movie => movie.title.toLowerCase().includes(searchText.toLowerCase()));

    if (moviesGrid) {
        moviesGrid.innerHTML = filteredMovies.map(createMovieCard).join('');
    } else {
        console.error('Movies grid element not found');
    }
}


function addSearchEventListener() {
    const searchInput = document.getElementById('searchInput');
    
    if (searchInput) {
        searchInput.addEventListener('input', (event) => {
            const searchText = event.target.value.trim();
            filterMoviesByTitle(searchText); 
        });
    } else {
        console.error('Search input element not found');
    }
}

// Función para mostrar los detalles de una película
function showMovieDetails(movieId) {
    const movie = movies.find(m => m.id === movieId);
    if (movie) {
        const modalImage = document.getElementById('modalImage');
        const modalDescription = document.getElementById('modalDescription');
        const modal = document.getElementById('confirmationModal');

        modalImage.src = movie.poster;
        modalDescription.textContent = `Descripción de la película: ${movie.title}`;

        modal.style.display = 'flex';
    }
}

// Función para cerrar el modal
function closeModal() {
    const modal = document.getElementById('confirmationModal');
    modal.style.display = 'none';
}

function init() {
    renderMovies(false);
    addEventListeners();  
    addSearchEventListener();  
}

document.addEventListener('DOMContentLoaded', init);




console.log('Movie data:', movies);
console.log('Sample movie card HTML:', createMovieCard(movies[0]));


